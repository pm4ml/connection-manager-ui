{
  "env": {
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "fixture": "readonly",
    "test": "readonly"
  },
  "rules": {
    "max-len": 100,
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-console": "off",
    "no-prototype-builtins": "off"
  }
}
